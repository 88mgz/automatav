    const url = URL.createObjectURL(blob)
    const a = document.createElement("a")
    a.href = url
    a.download = `${generatedArticle.slug}.json`
    a.click()
    URL.revokeObjectURL(url)
    toast({
      label: "Downloaded",
      description: "Article JSON has been downloaded",
    })
  }

